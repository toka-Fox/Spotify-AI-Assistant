<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: rgb(38, 38, 45);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.spotifyaisystem.GUIController">
    <HBox layoutX="14.0" layoutY="78.0" prefHeight="142.0" prefWidth="286.0">
        <VBox alignment="TOP_RIGHT" prefHeight="291.0" prefWidth="231.0" spacing="21.0">
            <padding>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </padding>
            <Label text="Genres:" textFill="WHITE" />
            <Label text="Moods:" textFill="WHITE" />
            <Label text="Number of Results:" textFill="WHITE">
                <padding>
                    <Insets top="30.0" />
                </padding>
            </Label>
        </VBox>
        <VBox prefHeight="437.0" prefWidth="275.0" spacing="10.0">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
            <TextField fx:id="genreField" promptText="Rock, Pop, etc." style="-fx-background-color: rgb(108, 108, 115); -fx-text-fill: white;" />
            <TextField fx:id="moodField" promptText="Happy, Sad, etc." style="-fx-background-color: rgb(108, 108, 115); -fx-text-fill: white;" />
            <Spinner fx:id="countSpinner" editable="true" prefHeight="25.0" prefWidth="190.0" style="-fx-base: rgb(108, 108, 115);">
                <VBox.margin>
                    <Insets top="32.0" />
                </VBox.margin>
            </Spinner>
        </VBox>
    </HBox>
    <VBox alignment="CENTER_RIGHT" layoutX="126.0" layoutY="249.0" prefHeight="80.0" prefWidth="174.0" spacing="10.0">
        <Button fx:id="recommendButton" mnemonicParsing="false" onAction="#recommend" style="-fx-background-color: rgb(108, 108, 115);" text="Get Recommendations" textFill="WHITE" />
        <Button fx:id="exportButton" disable="true" mnemonicParsing="false" onAction="#export" style="-fx-background-color: rgb(108, 108, 115);" text="Export to text file" textFill="WHITE" />
    </VBox>
   <TextArea fx:id="outputArea" layoutX="324.0" layoutY="48.0" prefHeight="304.0" prefWidth="455.0" style="-fx-background-color: rgb(48, 48, 55);" wrapText="true" />
</AnchorPane>
